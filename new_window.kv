WindowManager:
    FirstWindow:
    SecondWindow:
        id: dish
        name: "second"
    ThirdWindow:
        id: wine
        name:"third"
    FourthWindow:
    FifthWindow:

<FirstWindow>:
    name: "first"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 50
        spacing: 20

        Image:
            source: "logo.png"

        Label:
            text: "Have you ever had a problem with coming up with what to eat for dinner \n or maybe you wanted to know more about the wine you're drinking? "
            fontSize: 22
        
        Label:
            text: "If so this app is perfect for you."
            fontSize: 22
            bold: True

        Button:
            text: "Get a dish idea"
            fontSize: 32
            size_hint: (1,0.5)
            bold: True
            background_color: '#c77dff'
            on_release: 
                app.root.current = "second"
                root.manager.transition.direction = "left"
        Button:
            text: "Pair a wine to your dish"
            fontSize: 32
            size_hint: (1,0.5)
            bold: True
            background_color: '#c77dff'
            on_release: 
                app.root.current = "third"
                root.manager.transition.direction = "right"

<SecondWindow>:


    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 50
        spacing: 20

        Image:
            source: "logo.png"
        
        Label:
            text: "Get a perfect dinner idea"
            font_size: 28
        
        Label:
            text: "What would you like to eat?"
            font_size: 16
        
        TextInput:
            id: food_type
            multiline: False
            size_hint: (1, 0.5)
        
        Button:
            text: "Get an idea"
            fontSize: 32
            pos_hint: {'center_x': 0.5}
            size_hint: (0.75,0.5)
            bold: True
            background_color: '#c77dff'
            on_release: 
                app.root.current = "fourth"    
                #root.dish_search(food_type.text)
                #app.root.current = "fourth"
                #root.manager.transition.direction = "up"

        Button:
            text: "Go Back"
            fontSize: 32
            pos_hint: {'center_x': 0.5}
            size_hint: (0.75,0.5)
            bold: True
            background_color: '#c77dff'
            on_release: 
                app.root.current = "first"
                root.manager.transition.direction = "right"

<ThirdWindow>:
    name: "third"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 50
        spacing: 20
        
        Image:
            source: "logo.png"
        
        Label:
            text: "Get a wine paring"
            font_size: 28
        
        Label:
            text: "What food are you eating?"
            font_size: 16
            
        TextInput:
            id: dish_type
            multiline: False
            size_hint: (1, 0.5)
        
        Button:
            text: "Get a pair"
            fontSize: 32
            pos_hint: {'center_x': 0.5}
            size_hint: (0.75,0.5)
            bold: True
            background_color: '#c77dff'
            on_release: 
                app.root.current = "fifth"
                #root.wine_description(wine_name.text)
                
                #root.manager.transition.direction = "up"
        
        Button:
            text: "Go Back"
            fontSize: 32
            pos_hint: {'center_x': 0.5}
            size_hint: (0.75,0.5)
            bold: True
            background_color: '#c77dff'
            on_release: 
                app.root.current = "first"
                root.manager.transition.direction = "left"

<FourthWindow>:
    name: "fourth"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 50
        spacing: 20

<FifthWindow>:
    name: "fifth"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 50
        spacing: 20

