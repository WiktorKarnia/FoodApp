WindowManager:
    FirstWindow:
    SecondWindow:
    ThirdWindow:
    #FourthWindow:
    #FifthWindow:

<FirstWindow>:
    name: "first"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 50
        spacing: 20

        Image:
            source: "logo.png"

        Label:
            text: "Have you ever had a problem with coming up with what to eat for dinner \n or maybe you wanted to know more about the wine you're drinking? "
            fontSize: 22
        
        Label:
            text: "If so this app is perfect for you."
            fontSize: 22
            bold: True

        Button:
            text: "Get a dish idea"
            fontSize: 32
            size_hint: (1,0.5)
            bold: True
            background_color: '#c77dff'
            on_release: 
                app.root.current = "second"
                root.manager.transition.direction = "left"
        Button:
            text: "Get a wine description"
            fontSize: 32
            size_hint: (1,0.5)
            bold: True
            background_color: '#c77dff'
            on_release: 
                app.root.current = "third"
                root.manager.transition.direction = "right"

<SecondWindow>:
    name: "second"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 50
        spacing: 20

        Image:
            source: "logo.png"
        
        Label:
            text: "Get a perfect dinner idea"
            font_size: 28
        
        Label:
            text: "What would you like to eat?"
            font_size: 16
        
        TextInput:
            id: food_type
            multiline: False
            size_hint: (1, 0.5)
        
        Button:
            text: "Get an idea"
            fontSize: 32
            pos_hint: {'center_x': 0.5}
            size_hint: (0.75,0.5)
            bold: True
            background_color: '#c77dff'
            on_release: 
                root.dish_search(food_type.text)
                #app.root.current = "fourth"
                #root.manager.transition.direction = "up"

        Button:
            text: "Go Back"
            fontSize: 32
            pos_hint: {'center_x': 0.5}
            size_hint: (0.75,0.5)
            background_color: '#c77dff'
            on_release: 
                app.root.current = "first"
                root.manager.transition.direction = "right"

<ThirdWindow>:
    name: "third"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 50
        spacing: 20
        
        Image:
            source: "logo.png"
        
        Label:
            text: "Get a wine description"
            font_size: 28
        
        Label:
            text: "What wine are you drinking?"
            font_size: 16
            
        TextInput:
            id: wine_name
            multiline: False
            size_hint: (1, 0.5)
        
        Button:
            text: "Description"
            fontSize: 32
            pos_hint: {'center_x': 0.5}
            size_hint: (0.75,0.5)
            bold: True
            background_color: '#c77dff'
            on_release: 
                #app.root.current = "fifth"
                root.wine_description(wine_name.text)
                
                #root.manager.transition.direction = "up"
        
        Button:
            text: "Go Back"
            fontSize: 32
            pos_hint: {'center_x': 0.5}
            size_hint: (0.75,0.5)
            bold: True
            background_color: '#c77dff'
            on_release: 
                app.root.current = "first"
                root.manager.transition.direction = "left"

